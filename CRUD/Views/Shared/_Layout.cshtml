<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
   
</head>
<body class="p-0">
    <div class="">
        <div class="container">
            <nav class="navbar navbar-expand-lg p-4 navbar-dark" style="height: 60px; background-color: #1780A9">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                @Html.ActionLink("Alquiler de bicicletas", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav">
                        <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", new { @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("Acerca de", "About", "Home", new { @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("Contacto", "Contact", "Home", new { @class = "nav-link" })</li>
                     
                    </ul>
                </div>
            </nav>
        </div>
    </div>
    <div class="container p-4">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Aplicación de Wilmer Shagñay</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bootstrap.js")
    @RenderSection("scripts", required: false)
</body>
</html>
